.container
  .error-message= flash.now[:error]
  %h2.title Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :email, class: 'pass-sb-title'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'pass-text'
    .field
      = f.label :password, class: 'pass-sb-title'
      - if @minimum_password_length
        %em
          (#{@minimum_password_length}文字以上)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: 'pass-text'
    .field
      = f.label :password_confirmation, class: 'pass-sb-title'
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'pass-text'
    .actions
      = f.submit "Submit", class: 'btn-primary'
  = render "devise/shared/links"

